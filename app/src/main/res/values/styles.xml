<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@color/gs_gray_900</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="separator_hor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/gs_gray_400</item>
    </style>

    <style name="separator_hor_thin" parent="separator_hor">
        <item name="android:layout_height">0.6dp</item>
        <item name="android:background">@color/gs_gray_300</item>
    </style>

    <!-- Text style -->

    <style name="roboto_medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="roboto">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="roboto_light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="roboto_thin">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="lala_text_title_normal" parent="roboto_medium">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/gs_gray_900</item>
    </style>

    <style name="lala_text_context_normal" parent="roboto_light">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="lala_text_context_small" parent="roboto_thin">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/gs_gray_500</item>
    </style>

    <style name="icon_normal">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="badge_normal">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/gs_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_orvl_badge</item>
    </style>
</resources>
